generator client {
  provider = "prisma-client-js"
// output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String    @id @default(uuid())
  fullName     String
  document     String    // CPF
  address      String
  district     String
  city         String
  email        String    @unique
  phone        String
  userTypes    UserType
  hasExperienceWithTargetAudience Boolean
  userServiceArea  ServiceArea
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

}

enum ServiceArea {
  LIMPEZA
  COZINHA
  ATENDIMENTO_MEDICO
  PSICOLOGICO
  ARTES
  LAZER
  ESPORTE
}

enum UserType {
  VOLUNTEER
  DEPENDENT
  ADMIN
}

model Shelter {
  id                  String     @id @default(uuid())
  name                String
  capacity            Int
  mainNeeds           String
  foundationDate      DateTime
  description         String
  addresses           Address[]
  operatingSince      Int
  currentResidents    Int
  targetGender        Gender  // MASCULINO, FEMININO, MIXED
  documents           Document[] // relação com os arquivos
  responsibleName     String // nome da pessoa responsavel
  responsiblePhone    String // telefone da pessoa responsavel
  createdAt           DateTime   @default(now())
  updatedAt           DateTime   @updatedAt
}

model Address {
  id             String      @id @default(uuid())
  shelterId      String
  zipCode        String
  street         String
  number         String
  neighborhood   String?
  city           String
  state          String
  complement     String?

  shelter        Shelter @relation(fields: [shelterId], references: [id], onDelete: Cascade)
}

model Document {
  id         String   @id @default(uuid())
  shelterId  String
  shelter    Shelter  @relation(fields: [shelterId], references: [id], onDelete: Cascade)
  documentName       String   // ex: “CNPJ”, “Estatuto Social”
  url        String   // caminho do arquivo no storage (ex: S3 ou local)
  uploadedAt DateTime @default(now())
}

enum Gender {
  MALE
  FEMALE
  MIXED
}


